
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<div class="alert alert-danger" role="alert">
    <p align="center">Websitemizden alışveriş yapmak isteyen kişiler giriş yapmak zorundadırlar.</p>
    <hr>
    <p class="mb-0" align="center">Eğer üyeliğiniz yok ise oluşturmak için <a href="/home/kayitol/">tıklayınız.</a> </p>
</div>

@using (Html.BeginForm("Index", "Giris", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <main class="login-form">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">Giriş Yap</div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label for="email_address" class="col-md-4 col-form-label text-md-right">Email</label>
                                <div class="col-md-6">
                                    <input type="text" id="email_address" class="form-control" name="email" required autofocus>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="password" class="col-md-4 col-form-label text-md-right">Şifre</label>
                                <div class="col-md-6">
                                    <input type="password" id="password" class="form-control" name="sifre" required>
                                </div>
                            </div>

                            <div class="col-md-6 offset-md-4">
                                <button type="submit" class="btn btn-danger">
                                    Giriş Yap
                                </button>
                                <a href="#" class="btn btn-outline-danger">
                                    Şifremi Unuttum ?
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6 offset-md-4">
                            @if (Session["email"] == null)
                            {
                                <p class="alert">@ViewBag.HataliGiris</p>
                            }
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </main>
}















