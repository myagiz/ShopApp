@model ShopApp.WebUI.Models.tblMenuler
@{
    ViewBag.Title = "MenuDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>
<div class="card-title">Menü Düzenle</div>
<hr>
@using (Html.BeginForm("MenuDuzenle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{@Html.AntiForgeryToken()

    
    <div class="form-group">
        <label for="input-6">Başlık</label>
        @Html.TextBoxFor(x =>x.baslik,new {@class= "form-control form-control-rounded",placeholder="Başlık Giriniz" })
    </div>
    <div class="form-group">
        <label for="input-7">İçerik Metni</label>
        @Html.TextAreaFor(x => x.metin, new { @class = "ckeditor", placeholder = "Ürün Açıklaması Giriniz..." })
    </div>
    <div class="form-group">
        <button class="btn btn-light btn-round px-5"> Düzenle</button>
    </div>

}



