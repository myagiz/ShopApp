@model ShopApp.WebUI.Models.tblKategoriler
@{
    ViewBag.Title = "KategoriDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-title">Kategori Düzenle</div>
<hr>
@using (Html.BeginForm("KategoriDuzenle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{@Html.AntiForgeryToken()
<form>
    <div class="form-group">
        <label for="input-6">Kategori Adı</label>
        @Html.TextBoxFor(x => x.ad, new { @class = "form-control form-control-rounded", placeholder = "Kategori Adı Giriniz..." })
    </div>
    <div class="form-group">
        <label for="input-7">Kategori Açıklaması</label>
        @Html.TextBoxFor(x => x.aciklama, new { @class = "form-control form-control-rounded", placeholder = "Kategori Açıklaması Giriniz..." })
    </div>
    <div class="form-group">
        <label for="input-9">Resim</label>
        <input type="file" class="form-control form-control-rounded " name="resimUrl" placeholder="350x350 En Uygun Formattır" accept=".jpg,.png.,.jpeg" />
    </div>
    <div class="form-group">
        <button class="btn btn-light btn-round px-5"> Düzenle</button>
    </div>

</form>
}


