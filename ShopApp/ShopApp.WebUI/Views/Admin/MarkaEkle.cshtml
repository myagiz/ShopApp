@model ShopApp.WebUI.Models.tblMarkalar
@{
    ViewBag.Title = "MarkaEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-title">Marka Ekle</div>
<hr>
@using (Html.BeginForm("MarkaEkle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{@Html.AntiForgeryToken()
<form>
    <div class="form-group">
        <label for="input-6">Marka Adı</label>
        @Html.TextBoxFor(x => x.ad, new { @class = "form-control form-control-rounded", placeholder = "Marka Adı Giriniz..." })
    </div>
    <div class="form-group">
        <label for="input-7">Kategori</label>
        @Html.DropDownList("kategori", null, new { @class = "form-control form-control-rounded" })
    </div>
    <div class="form-group">
        <label for="input-7">Çeşit</label>
        @Html.DropDownList("cesit", null, new { @class = "form-control form-control-rounded" })
    </div>
    <div class="form-group">
        <label for="input-9">Marka Resim</label>
        <input required type="file" class="form-control form-control-rounded " name="resimUrl" placeholder="800x800 En Uygun Formattır" accept=".jpg,.png.,.jpeg" />
    </div>
    <div class="form-group">
        <button class="btn btn-light btn-round px-5"> Ekle</button>
    </div>

</form>
}

