@model IEnumerable<ShopApp.WebUI.Models.tblAyarlar>
@{
    ViewBag.Title = "Ayarlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h6><a>Website Ayarlarınızın Güncel Hali Aşağıdadır.</a></h6>
<hr />
<div class="card">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">Logo </th>
                <th scope="col">Başlık</th>
                <th scope="col">Site Bilgisi</th>
                <th scope="col">Alt Başlık (Footer) </th>
                <th scope="col">Düzenle </th>
            </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                <tr>
                    <td><img src="@item.logourl" width="250" height="70"/></td>
                    <td>@Html.DisplayFor(Model => item.baslik)</td>
                    <td>@Html.DisplayFor(Model =>item.hakkimda) </td>
                    <td>@Html.DisplayFor(Model => item.footer)</td>
                    <td><a href="/admin/ayarduzenle/@item.id" class="btn btn-light">AYAR DÜZENLE</a></td>
                </tr>
                </tbody>
            }
        </table>
    </div>
</div>

<h6>Anasayfa Modül Resimlerinizi Aşağıdan Ayarlayabilirsiniz.</h6><hr/>
<div class="card">
    <div class="container" style="margin-top: 25px">
       
        <div class="row">

            @foreach (var modul in Model)
            {
                <div class="col-sm">
                    <div class="card" style="width: 18rem;">
                        <img src="@modul.modul1" class="card-img-top" width="550" height="200" >
                        <div class="card-body" align="center">
                            <a href="/admin/modulduzenle1/@modul.id" class="btn btn-light">Modül #1 Düzenle</a>
                        </div>
                    </div>
                </div>
                <div class="col-sm">
                    <div class="card" style="width: 18rem;">
                        <img src="@modul.modul2" class="card-img-top" width="550" height="200" >
                        <div class="card-body" align="center">
                            <a href="/admin/modulduzenle2/@modul.id" class="btn btn-light">Modül #2 Düzenle</a>
                        </div>
                    </div>
                </div>
                <div class="col-sm">
                    <div class="card" style="width: 18rem;">
                        <img src="@modul.modul3" class="card-img-top" width="550" height="200">
                        <div class="card-body" align="center">
                            <a href="/admin/modulduzenle3/@modul.id" class="btn btn-light">Modül #3 Düzenle</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>