@model ShopApp.WebUI.Models.tblSlider
@{
    ViewBag.Title = "SliderEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-title">Slider Ekle</div>
<hr>
@using (Html.BeginForm("SliderEkle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <form>
        <div class="form-group">
            <label for="input-6">Slider Başlık</label>
            @Html.TextBoxFor(x => x.baslik, new { @class = "form-control form-control-rounded", placeholder = "Başlık Giriniz..." })
        </div>
        <div class="form-group">
            <label for="input-7">Slider Açıklama</label>
            @Html.TextBoxFor(x => x.aciklama, new { @class = "form-control form-control-rounded", placeholder = "Açıklama Giriniz..." })
        </div>
        <div class="form-group">
            <label for="input-9">Resim</label>
            <input required type="file" class="form-control form-control-rounded " name="resimUrl" placeholder="350x350 En Uygun Formattır" accept=".jpg,.png.,.jpeg" />
        </div>
        <div class="form-group">
            <button class="btn btn-light btn-round px-5"> Ekle</button>
        </div>

    </form>
}
