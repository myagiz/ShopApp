@model ShopApp.WebUI.Models.tblAyarlar
@{
    ViewBag.Title = "AyarDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-title">Website Ayarlarını Düzenle</div>
<hr>
@using (Html.BeginForm("AyarDuzenle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{@Html.AntiForgeryToken()
<form>
    <div class="form-group">
        <label for="input-6">Site Başlığı</label>
        @Html.TextBoxFor(x => x.baslik, new { @class = "form-control form-control-rounded", placeholder = "Kategori Adı Giriniz..." })
    </div>
    <div class="form-group">
        <label for="input-7">Site Hakkında Bilgisi</label>
        @Html.TextBoxFor(x => x.hakkimda, new { @class = "form-control form-control-rounded", placeholder = "Kategori Açıklaması Giriniz..." })
    </div>
    <div class="form-group">
        <label for="input-7">Site Alt Başlık (Footer)</label>
        @Html.TextBoxFor(x => x.footer, new { @class = "form-control form-control-rounded", placeholder = "Kategori Açıklaması Giriniz..." })
    </div>
    <div class="form-group">
        <label for="input-9">Site Logo</label>
        <input type="file" class="form-control form-control-rounded " name="logourl" placeholder="350x350 En Uygun Formattır" accept=".jpg,.png,.jpeg" />
    </div>
    <div class="form-group">
        <button class="btn btn-light btn-round px-5"> Düzenle</button>
    </div>

</form>
}



