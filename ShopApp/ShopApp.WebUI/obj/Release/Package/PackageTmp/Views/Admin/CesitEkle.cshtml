@model ShopApp.WebUI.Models.tblCesitler
@{
    ViewBag.Title = "CesitEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-title">Çeşit Ekle</div>
<hr>
@using (Html.BeginForm("CesitEkle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{@Html.AntiForgeryToken()
<form>
    <div class="form-group">
        <label for="input-6">Çeşit Kategorisi</label>
        @Html.DropDownList("kategori", null, new { @class = "form-control form-control-rounded" })
    </div>
    <div class="form-group">
        <label for="input-7">Çeşit Adı</label>
        @Html.TextBoxFor(x => x.ad, new { @class = "form-control form-control-rounded", placeholder = "Çeşit Adını Giriniz..." })
    </div>
    <div class="form-group">
        <label for="input-7">Çeşit Açıklama</label>
        @Html.TextBoxFor(x => x.aciklama, new { @class = "form-control form-control-rounded", placeholder = "Çeşit Açıklaması Giriniz..." })
    </div>
    <div class="form-group">
        <button class="btn btn-light btn-round px-5"> Ekle</button>
    </div>

</form>
}


