@using ShopApp.WebUI.Models
@using PagedList
@using PagedList.Mvc
@using ShopApp.WebUI.Helper
@model PagedList<tblStokYonetimi>
@{
    ViewBag.Title = "StokYonetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h7><a href="/admin/stokekle/" class="badge badge-light">Stok Ekle</a></h7>
<hr />
<p>Tüm stoklar listelenmiştir.</p>

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Ürün </th>
                <th scope="col">Stok Durumu</th>
                <th scope="col">Düzenle</th>
                <th scope="col">Sil</th>
            </tr>
        </thead>
        @foreach (var p in Model)
        {
            <tbody>
                <tr>
                    <th scope="row">#@p.tblUrunler.ad</th>
                    <td>@p.durum</td>
                    @*<td><a href="/admin/urun/@SeoHelper.ToSeoUrl(p.ad).ToLower()=@p.id" class="btn btn-success">İncele</a></td>
                    <td><a href="/admin/urunduzenle/@SeoHelper.ToSeoUrl(p.ad).ToLower()=@p.id" class="btn btn-dark">Düzenle</a></td>*@
                    <td>@Html.ActionLink("Sil", "UrunSil", new { id = p.id }, new { @class = "btn btn-light", onclick = "return confirm('Ürün Silmek İstediğinize Emin Misiniz?')" })</td>
                </tr>
            </tbody>
        }
    </table>
    <ul class="pagination pagination-sm">
        @Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Urunler", new { sayfa }))
    </ul>
</div>



<div class="progress">
    <div class="progress-bar" role="progressbar" style="width: 45%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
</div>