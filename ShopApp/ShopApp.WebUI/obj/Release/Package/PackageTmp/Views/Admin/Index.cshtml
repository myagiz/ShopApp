@using ShopApp.WebUI.Models
@using PagedList
@using PagedList.Mvc
@using ShopApp.WebUI.Helper
@model PagedList<tblUrunler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h5><i>Yönetim Paneline Hoşgeldiniz !</i></h5>
<hr />
<div class="card mt-3">
    <div class="card-content">
        <div class="row row-group m-0">
            <div class="col-12 col-lg-6 col-xl-3 border-light">
                <div class="card-body">
                    <h3 class="mb-0" style="color: navajowhite">@ViewBag.ToplamSatis<span class="float-right"><i class="fa fa-shopping-cart" style="color: navajowhite"></i></span></h3>
                    <hr/>
                    <p class="mb-0 small-font" style="color: navajowhite">Toplam Satış</p>
                </div>
            </div>
            <div class="col-12 col-lg-6 col-xl-3 border-light">
                <div class="card-body">
                    <h3 class="mb-0" style="color: goldenrod">@ViewBag.ToplamUrun<span class="float-right"><i class="fa fa-product-hunt" style="color: goldenrod"></i></span></h3>
                    <hr/>
                    <p class="mb-0 small-font" style="color: goldenrod">Toplam Ürün</p>
                </div>
            </div>
            <div class="col-12 col-lg-6 col-xl-3 border-light">
                <div class="card-body">
                    <h3 class="mb-0" style="color: firebrick">@ViewBag.ToplamMusteri<span class="float-right"><i class="fa fa-user-circle" style="color: firebrick"></i></span></h3>
                    <hr/>
                    <p class="mb-0 small-font" style="color: firebrick">Toplam Müşteri</p>
                </div>
            </div>
            <div class="col-12 col-lg-6 col-xl-3 border-light">
                <div class="card-body">
                    <h3 class="mb-0" style="color: aquamarine">@ViewBag.ToplamYonetici<span class="float-right"><i class="fa fa-id-card" style="color: aquamarine"></i></span></h3>
                    <hr/>
                    <p class="mb-0 small-font" style="color: aquamarine">Toplam Yönetici</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row" style="margin-top: -10px">
    <div class="col-12 col-lg-8 col-xl-8">
        <div class="card">
            <div class="card-header">
                <h6 style="color: darkorange">SON EKLENEN ÜRÜNLER <i style="color: azure">(5 Kayıt Getirilmiştir !)</i></h6>
                <div class="card-action">
                </div>
            </div>
            <div class="card-body">

                @{
                    Html.RenderAction("SonUrunlerPartial", "Admin");
                }

            </div>

            <div class="row m-0 row-group text-center border-top border-light-3">
                <div class="col-12 col-lg-4">
                    <div class="p-3">
                        <h5 class="mb-0">45.87M</h5>
                        <small class="mb-0">Overall Visitor <span> <i class="fa fa-arrow-up"></i> 2.43%</span></small>
                    </div>
                </div>
                <div class="col-12 col-lg-4">
                    <div class="p-3">
                        <h5 class="mb-0">15:48</h5>
                        <small class="mb-0">Visitor Duration <span> <i class="fa fa-arrow-up"></i> 12.65%</span></small>
                    </div>
                </div>
                <div class="col-12 col-lg-4">
                    <div class="p-3">
                        <h5 class="mb-0">245.65</h5>
                        <small class="mb-0">Pages/Visit <span> <i class="fa fa-arrow-up"></i> 5.62%</span></small>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="col-12 col-lg-4 col-xl-4">
        <div class="card">
            <div class="card-header">
                <h6 style="color: darkorange">PROFİL BİLGİLERİNİZ</h6>
                <div class="card-action">

                </div>
            </div>
            @{
                Html.RenderAction("ProfilPartial", "Admin");
            }
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <h6 style="color: darkorange">SON SİPARİŞLER <i style="color: azure">(5 Kayıt Getirilmiştir !)</i></h6>
                <div class="card-action">
                </div>
            </div>
            <div class="table-responsive">
                @{
                    Html.RenderAction("SonSiparislerPartial", "Admin");
                }
            </div>
        </div>
    </div>
</div>