@model ShopApp.WebUI.Models.tblUrunler
@{
    ViewBag.Title = "UrunDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>
<div class="card-title">Ürün Düzenle</div>
<hr>
@using (Html.BeginForm("UrunDuzenle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{@Html.AntiForgeryToken()

<div class="tab-content p-3">
    <div class="tab-pane active">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="input-6">Ürün Adı</label>
                    @Html.TextBoxFor(x => x.ad, new { @class = "form-control form-control-rounded", placeholder = "Ürün Adı Giriniz..." })
                </div>

                <div class="form-group">
                    <label for="input-7">Ürün Açıklaması</label>
                    @Html.TextAreaFor(x => x.aciklama, new { @class = "ckeditor", placeholder = "Ürün Açıklaması Giriniz..." })
                </div>
                <div class="form-group">
                    <label for="input-9">Ürün Resmi</label>
                    <input type="file" class="form-control form-control-rounded " name="resimUrl" id="resimUrl" multiple="true" placeholder="600x600 En Uygun Formattır" accept=".jpg,.png,.jpeg" />
                </div>

            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="input-7">Kategori</label>
                    @Html.DropDownList("kategori", null, new { @class = "form-control form-control-rounded" })
                </div>
                <div class="form-group">
                    <label for="input-7">Çeşit</label>
                    @Html.DropDownList("cesit", null, new { @class = "form-control form-control-rounded" })
                </div>
                <div class="form-group">
                    <label for="input-7">Marka</label>
                    @Html.DropDownList("marka", null, new { @class = "form-control form-control-rounded" })
                </div>
                <div class="form-group">
                    <label for="input-7">Stok</label>
                    @Html.DropDownList("stok", null, new { @class = "form-control form-control-rounded" })
                </div>
                <div class="form-group">
                    <label for="input-7">Renk</label>
                    @Html.TextBoxFor(x => x.renk, new { @class = "form-control form-control-rounded", placeholder = "Ürün Rengi Giriniz..." })
                </div>
                <div class="form-group">
                    <label for="input-7">Fiyat</label>
                    @Html.TextBoxFor(x => x.fiyat, new { @class = "form-control form-control-rounded", placeholder = "Ürün Fiyatı Giriniz..." })
                </div>
                <div class="form-group">
                    <button class="btn btn-light btn-round px-5"> Düzenle</button>
                </div>

            </div>

        </div>
        <!--/row-->
    </div>

</div>


}

