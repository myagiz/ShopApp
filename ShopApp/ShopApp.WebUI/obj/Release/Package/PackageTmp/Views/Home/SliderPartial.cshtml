@model IEnumerable<ShopApp.WebUI.Models.tblSlider>


@foreach (var item in Model)
{
    <div id="slide-1" class="slide">
        <div class="slider-img">
            <a href="preview.html"><img src="@item.resimUrl" height="400" alt="learn more" /></a>
        </div>
        <div class="slider-text">
            <h2>@item.baslik<br></h2>
            <div class="features_list">
                <p>@item.aciklama</p>
            </div>
            
        </div>
        <div class="clear"></div>
    </div>
}






