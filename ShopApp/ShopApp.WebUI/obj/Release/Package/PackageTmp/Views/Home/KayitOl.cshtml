@model ShopApp.WebUI.Models.tblMusteriler
@{
    ViewBag.Title = "KayitOl";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<div class="card-header">
    <h1>Kayıt Formu</h1><hr />
    @using (Html.BeginForm("KayitOl", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {@Html.AntiForgeryToken()
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputEmail4">Ad</label>
            @Html.TextBoxFor(x => x.ad, new { @class = "form-control form-control-rounded", placeholder = "Adınızı Giriniz..." })
        </div>
        <div class="form-group col-md-6">
            <label for="inputPassword4">Soyad</label>
            @Html.TextBoxFor(x => x.soyad, new { @class = "form-control form-control-rounded", placeholder = "Soyadınızı Giriniz..." })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputEmail4">Email</label>
            @Html.TextBoxFor(x => x.email, new { @class = "form-control form-control-rounded", placeholder = "Email Adresinizi Giriniz..." })
        </div>
        <div class="form-group col-md-6">
            <label for="inputPassword4">Şifre</label>
            @Html.TextBoxFor(x => x.sifre, new { @class = "form-control form-control-rounded", type = "password", placeholder = "Şifrenizi Oluşturunuz..." })
