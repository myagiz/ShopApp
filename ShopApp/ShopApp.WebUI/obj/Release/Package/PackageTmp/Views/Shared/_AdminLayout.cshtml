@if (Session["yoneticiId"] == null)
{
    Response.Redirect("/Giris/Yonetici/");
}
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Yagodizayn Admin Panel v1</title>
    <!-- loader-->
    <link href="/AdminPanelFiles/assets/css/pace.min.css" rel="stylesheet" />
    <script src="/AdminPanelFiles/assets/js/pace.min.js"></script>
    <!--favicon-->
    <link rel="icon" href="/AdminPanelFiles/assets/images/favicon.ico" type="image/x-icon">
    <!-- Vector CSS -->
    <link href="/AdminPanelFiles/assets/plugins/vectormap/jquery-jvectormap-2.0.2.css" rel="stylesheet" />
    <!-- simplebar CSS-->
    <link href="/AdminPanelFiles/assets/plugins/simplebar/css/simplebar.css" rel="stylesheet" />
    <!-- Bootstrap core CSS-->
    <link href="/AdminPanelFiles/assets/css/bootstrap.min.css" rel="stylesheet" />
    <!-- animate CSS-->
    <link href="/AdminPanelFiles/assets/css/animate.css" rel="stylesheet" type="text/css" />
    <!-- Icons CSS-->
    <link href="/AdminPanelFiles/assets/css/icons.css" rel="stylesheet" type="text/css" />
    <!-- Sidebar CSS-->
    <link href="/AdminPanelFiles/assets/css/sidebar-menu.css" rel="stylesheet" />
    <!-- Custom Style-->
    <link href="/AdminPanelFiles/assets/css/app-style.css" rel="stylesheet" />

    <link href="~/Content/PagedList.css" rel="stylesheet" />

</head>

<body class="bg-theme bg-theme2">

    <!-- Start wrapper-->
    <div id="wrapper">

        <!--Start sidebar-wrapper-->
        <div id="sidebar-wrapper" data-simplebar="" data-simplebar-auto-hide="true">
            <div class="brand-logo">
                <a href="index.html">
                    <img src="/AdminPanelFiles/assets/images/logo-icon.png" class="logo-icon" alt="logo icon">
                    <h5 class="logo-text">YagoDizayn Panel v1</h5>
                </a>
            </div>
            <ul class="sidebar-menu do-nicescrol">
                <li class="sidebar-header">Menüler</li>
                <li>
                    <a href="/admin/">
                        <i class="zmdi zmdi-view-dashboard text-danger"></i> <span>Anasayfa</span>
                    </a>
                </li>

                <li>
                    <a href="/admin/menuler/">
                        <i class="zmdi zmdi-collection-text text-primary"></i> <span>Menüler</span>
                        <small class="badge float-right badge-light"></small>
                    </a>
                </li>


                <li>
                    <a href="/admin/kategoriler/">
                        <i class="zmdi zmdi-storage text-info"></i> <span>Kategoriler</span>
                        <small class="badge float-right badge-light">Telefon,PC..</small>
                    </a>
                </li>

                <li>
                    <a href="/admin/cesitler/">
                        <i class="zmdi zmdi-format-list-bulleted text-white"></i> <span>Çeşitler</span>
                        <small class="badge float-right badge-light">Ram,Monitor..</small>
                    </a>
                </li>
                <li>
                    <a href="/admin/markalar/">
                        <i class="zmdi zmdi-format-list-bulleted text-danger"></i> <span>Markalar</span>
                        <small class="badge float-right badge-light">Apple, Samsung..</small>
                    </a>
                </li>
                <li>
                    <a href="/admin/urunler/">
                        <i class="zmdi zmdi-fire text-success"></i> <span>Ürünler</span>
                    </a>
                </li>

                <li>
                    <a href="/admin/yoneticiler/">
                        <i class="zmdi zmdi-account text-warning"></i> <span>Yöneticiler</span>
                        <small class="badge float-right badge-light">Admin,Satış Grv..</small>
                    </a>
                </li>

                <li>
                    <a href="/admin/slideryoneticisi/">
                        <i class="zmdi zmdi-slideshow text-primary"></i> <span>Slider Yöneticisi</span>
                    </a>
                </li>
                <li>
                    <a href="/admin/stokyonetimi/">
                        <i class="zmdi zmdi-case-check text-info"></i> <span>Stok Yönetimi</span>
                    </a>
                </li>

                <li>
                    <a href="/admin/musteriler/">
                        <i class="zmdi zmdi-accounts text-warning"></i> <span>Müşteriler</span>
                        <small class="badge float-right badge-light">Üyeler</small>
                    </a>
                </li>

                <li>
                    <a href="/admin/sipariskaydi/">
                        <i class="zmdi zmdi-local-grocery-store text-success"></i> <span>Sipariş Kaydı</span>
                    </a>
                </li>
                <li>
                    <a href="/admin/iletisim/">
                        <i class="zmdi zmdi-mail-reply text-white"></i> <span>İletişim Modülü</span>
                    </a>
                </li>
                <li>
                    <a href="/admin/logs/">
                        <i class="zmdi zmdi-collection-text text-warning"></i> <span>Log Kayıtları</span>
                    </a>
                </li>
                <li>
                    <a href="/admin/ayarlar/">
                        <i class="zmdi zmdi-help text-danger"></i> <span>Ayarlar</span>
                        <small class="badge float-right badge-light">Site Genel Ayarlar</small>
                    </a>
                </li>
            </ul>

        </div>
        <!--End sidebar-wrapper-->
        <!--Start topbar header-->
        <header class="topbar-nav">
            <nav class="navbar navbar-expand fixed-top">
                <ul class="navbar-nav mr-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link toggle-menu" href="javascript:void();">
                            <i class="icon-menu menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <form class="search-bar">
                            <input type="text" class="form-control" placeholder="Arama">
                            <a href="javascript:void();"><i class="icon-magnifier"></i></a>
                        </form>
                    </li>
                </ul>
                <h7><i>@Session["yoneticiAd"] @Session["yoneticiSoyad"]</i></h7>

                <ul class="navbar-nav align-items-center right-nav-link">



                    <li class="nav-item">
                        <a class="nav-link dropdown-toggle dropdown-toggle-nocaret" data-toggle="dropdown" href="#">
                            <span class="user-profile"><img src="@Session["yoneticiResim"]" class="img-circle" alt="user avatar"></span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-right">
                            <li class="dropdown-item user-details">
                                <a href="javaScript:void();">
                                    <div class="media">
                                        <div class="avatar"><img class="align-self-start mr-3" src="@Session["yoneticiResim"]" alt="user avatar"></div>
                                        <div class="media-body">
                                            <h6 class="mt-2 user-title">@Session["yoneticiAd"]&nbsp;@Session["yoneticiSoyad"]</h6>
                                            <p class="user-subtitle">@Session["yoneticiEmail"]</p>
                                        </div>
                                    </div>
                                </a>
                            </li>
                            <li class="dropdown-divider"></li>
                            <li class="dropdown-item"><i class="icon-wallet mr-2"></i> <a href="#">Profil</a></li>
                            <li class="dropdown-divider"></li>
                            <li class="dropdown-item"><i class="icon-power mr-2"></i> <a href="/Giris/YoneticiCikis/">Çıkış</a></li>
                        </ul>
                    </li>
                </ul>
            </nav>
        </header>
        <!--End topbar header-->

        <div class="clearfix"></div>

        <div class="content-wrapper">
            <div class="container-fluid">

                <!--Start Dashboard Content-->

                <div class="row">
                    <div class="col-12 col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <div>
                                    @RenderBody()
                                </div>
                            </div>
                        </div>
                    </div><!--End Row-->
                    <!--End Dashboard Content-->
                    <!--start overlay-->
                    <div class="overlay toggle-menu"></div>
                    <!--end overlay-->

                </div>
                <!-- End container-fluid-->

            </div><!--End content-wrapper-->
            <!--Start Back To Top Button-->
            <a href="javaScript:void();" class="back-to-top"><i class="fa fa-angle-double-up"></i> </a>
            <!--End Back To Top Button-->
            <!--Start footer-->
            <footer class="footer">
                <div class="container">
                    <div class="text-center">
                        Copyright © 2020 Yagodizayn.com
                    </div>
                </div>
            </footer>
            <!--End footer-->
            <!--start color switcher-->
            <div class="right-sidebar">
                <div class="switcher-icon">
                    <i class="zmdi zmdi-settings zmdi-hc-spin"></i>
                </div>
                <div class="right-sidebar-content">

                    <p class="mb-0">Renk Ayarları</p>
                    <hr>

                    <ul class="switcher">
                        <li id="theme1"></li>
                        <li id="theme2"></li>
                        <li id="theme3"></li>
                        <li id="theme4"></li>
                        <li id="theme5"></li>
                        <li id="theme6"></li>
                        <li id="theme7"></li>
                        <li id="theme8"></li>
                        <li id="theme9"></li>
                        <li id="theme10"></li>
                        <li id="theme11"></li>
                        <li id="theme12"></li>
                        <li id="theme13"></li>
                        <li id="theme14"></li>
                    </ul>

                </div>
            </div>
            <!--end color switcher-->

        </div><!--End wrapper-->
        <!-- Bootstrap core JavaScript-->
        <script src="/AdminPanelFiles/assets/js/jquery.min.js"></script>
        <script src="/AdminPanelFiles/assets/js/popper.min.js"></script>
        <script src="/AdminPanelFiles/assets/js/bootstrap.min.js"></script>
        <script src="~/Content/ckeditor/ckeditor.js"></script>
        <!-- simplebar js -->
        <script src="/AdminPanelFiles/assets/plugins/simplebar/js/simplebar.js"></script>
        <!-- sidebar-menu js -->
        <script src="/AdminPanelFiles/assets/js/sidebar-menu.js"></script>
        <!-- loader scripts -->
        <script src="/AdminPanelFiles/assets/js/jquery.loading-indicator.js"></script>
        <!-- Custom scripts -->
        <script src="/AdminPanelFiles/assets/js/app-script.js"></script>
        <!-- Chart js -->

        <script src="/AdminPanelFiles/assets/plugins/Chart.js/Chart.min.js"></script>

        <!-- Index js -->
        <script src="/AdminPanelFiles/assets/js/index.js"></script>
    </div>


</body>
</html>
